{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./build",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx", "src/TRequests/q.ts_test", "src/Scalper/index.ts_", "src/Flipper/index.ts_",
  ],
  "exclude": [
    "**/node_modules",
    "**/node_modules_u",
    "**/node_modules_w",
    ".eslintrc.js",
    "build",
    "**/dist",
    "**/dist/**/*.d.ts",
  ]
}
