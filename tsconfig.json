{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./build",
    "rootDir": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  // "ts-node": {
  //   // these options are overrides used only by ts-node
  //   // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
  //   "compilerOptions": {
  //     "module": "commonjs"
  //   }
  // },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": [
    "node_modules",
    "node_modules_w",
    "**/node_modules_w",
    "**/node_modules_u",
    "**/node_modules",
    ".eslintrc.js",
    "build",
    "**/dist",
    "**/dist/**/*.d.ts",
  ]
}
