{
  "name": "opexbot",
  "author": "pskucherov",
  "description": "Trading bot.",
  "license": "Apache-2.0",
  "version": "0.4.1",
  "main": "./opexbot.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pskucherov/OpexBot.git"
  },
  "bin": {
    "opexbot": "opexbot.js"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "language": 1033,
            "manufacturer": "opexflow.com"
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.opexflow",
    "productName": "OpexBot",
    "copyright": "Copyright Â© 2023 pskucherov",
    "win": {
      "target": "NSIS",
      "icon": "./icons/o.png",
      "requestedExecutionLevel": "requireAdministrator",
      "legalTrademarks": "OPEXFLOW"
    },
    "files": [
      "./**",
      "node_modules/**",
      "next.config.js",
      "package.json",
      "!.git",
      "!dist",
      "!out"
    ],
    "asar": false,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "extraResources": [
      "./db/data"
    ]
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production PORT=3056 electron-forge start",
    "dev": "cross-env NODE_ENV=production node src/main",
    "lint-fix": "npx eslint --fix .",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make",
    "build": "cross-env NODE_ENV=production npx electron-builder build --win",
    "postinstall": "npx electron-builder install-app-deps"
  },
  "precommit": {
    "run": "lint-fix"
  },
  "engines": {
    "node": ">=17.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-wix": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "concurrently": "^7.2.0",
    "electron": "^22.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^5.1.0",
    "electron-wix-msi": "^5.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-sonarjs": "^0.13.0",
    "exe-icon-extractor": "^1.0.8",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-forge": "^5.2.4",
    "electron-log": "^4.4.8",
    "kill-port": "^2.0.1",
    "node-hmr": "^1.3.2",
    "opexviewer": "^0.4.5",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4",
    "tinkofftradingbotconnector": "^0.4.4"
  }
}
